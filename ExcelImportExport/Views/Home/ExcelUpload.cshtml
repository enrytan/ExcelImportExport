@model List<ExcelImportExport.Models.ExcelUpload>

@{
    ViewBag.Title = "Student Data Upload";
}

<script>
    $(document).ready(function () {
        $('form').submit(function () {
            $(this).find(':submit').attr('disabled', 'disabled');
            $(this).find(':submit').attr('value', 'Please Wait');
        });
    });
</script>

<div class="box box-default">
    <div class="box-header with-border">
        <h3 class="box-title">Upload Data</h3>
    </div>
    <div class="box-body">
        <form action="ExcelUpload" method="post" enctype="multipart/form-data">
            <div class="form-horizontal">
                <div class="form-group">
                    <label for="file" class="control-label col-md-2">House Data File : </label>
                    <div class="col-md-6">
                        <input type="file" accept=".xlsx" name="file" id="file" required="true" class="form-control btn btn-default" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input id="btnSubmit" type="submit" value="Upload" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </form>
    </div>

    @if (Model.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Student ID</th>
                    <th scope="col">Student Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.StudentId</th>
                        <td>@item.StudentName</td>
                    </tr>
                }

            </tbody>
        </table>
    }
</div>

